{
  "name": "edgemesh",
  "version": "1.6.0",
  "description": "Dynamic Web Acceleration Platform",
  "main": "dist/index.js",
  "bin": {
    "edgemesh": "dist/bin.js"
  },
  "xo": {
    "parser": "babel-eslint",
    "env": [
      "es6",
      "browser",
      "mocha"
    ],
    "globals": [
      "chai",
      "assert",
      "expect"
    ],
    "ignores": [
      "test/**",
      "dist/**"
    ],
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "always"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgemesh/edgemesh.git"
  },
  "author": "Randy Lebeau <rl@edgemesh.com>",
  "license": "MPL-2",
  "bugs": {
    "url": "https://github.com/edgemesh/edgemesh/issues"
  },
  "homepage": "https://edgemesh.com",
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "component-emitter": "^1.2.1",
    "shelljs": "^0.7.7"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-coverage": "^1.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "inquirer": "^3.0.6",
    "karma": "^1.7.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-rollup-plugin": "^0.2.4",
    "mocha": "^3.4.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-js": "^3.0.10"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "dist": "./scripts/dist.sh",
    "clean": "./scripts/clean.sh",
    "test": "./scripts/test.sh",
    "lint": "./scripts/lint.sh",
    "test-browser": "./scripts/test-browser.sh",
    "test-server": "./scripts/test-server.sh",
    "pub": "./scripts/publish.sh"
  }
}
